<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>會員註冊</title>
</head>
<body>
  <%- include("./basic/header.ejs")%>
  <section class="container">
    <div class="columns">
      <div class="column is-6 is-offset-3 is-offset-3" id="column">
        <h2 class="title mt-4 has-text-centered">會員註冊</h2>
        <form class="form" action="post">
          <div class="field is-horizontal">
            <div class="field-label is-normal">
              <label class="label" >暱稱：</label>
            </div>
            <div class="field-body">
              <div class="field">
                  <input class="input" type="text" id="name">
              </div>
            </div>
          </div>
            <div class="field is-horizontal">
              <div class="field-label is-normal ">
                <label class="label">聯絡電話：</label>
              </div>
              <div class="field-body">
                <div class="field">
                    <input class="input" type="text" id="phone">
                </div>
              </div>
            </div>
            <div class="field is-horizontal">
              <div class="field-label is-normal">
                <label class="label">電子信箱：</label>
              </div>
              <div class="field-body">
                <div class="field">
                    <input class="input" type="email" id="email">
                </div>
              </div>
            </div>
            <div class="field is-horizontal">
              <div class="field-label is-normal">
                <label class="label">生日：</label>
              </div>
              <div class="field-body">
                <div class="field">
                    <input class="input" type="date" id="birth">
                </div>
              </div>
            </div>
            <div class="field is-horizontal">
              <div class="field-label is-normal">
                <label class="label">帳號：</label>
              </div>
              <div class="field-body">
                <div class="field">
                    <input class="input" type="text" id="account">
                </div>
              </div>
            </div>
              <div class="field is-horizontal">
                <div class="field-label is-normal">
                  <label class="label">密碼：</label>
                </div>
                <div class="field-body">
                  <div class="field">
                      <input class="input" type="password" id="password">
                  </div>
                </div>
              </div>
              <div class="field is-horizontal">
                <div class="field-label is-normal">
                  <label class="label">密碼確認：</label>
                </div>
                <div class="field-body">
                  <div class="field">
                      <input class="input" type="password" id="passwordCheck">
                  </div>
                </div>
              </div>
          <div class="has-text-centered">
            <button type="button" class="button is-primary is-medium" id="sign_up">
                會員註冊
            </button>
          </div>
        </form>
      </div>
    </div>
  </section>

  <script>
    $('#sign_up').click((evt) => {
      evt.preventDefault;
      register();
    })

    function register() {
      if ($('#password').val() === $('#passwordCheck').val()) {
        let data = {
          name: $('#name').val(),
          cellphone: $('#phone').val(),
          email: $('#email').val(),
          birthday: $('#birth').val(),
          account: $('#account').val(),
          password: $('#password').val()
        };
        axios.post("api/register", data)
          .then((res) => {
            if (res.status === 201) {
              alert('註冊成功!');
              window.location.href = "/login";
            }
          })
          .catch((error) => {
            alert('註冊失敗!請重新操作!');
            location.reload();
          })

      } else {
        alert ('密碼驗證錯誤!請重新輸入')
      }
    }
  </script>
</body>
</html>